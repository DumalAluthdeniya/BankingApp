@inject ISharedViewLocalizer localizer
@model UserViewModel

@{
	ViewData["Title"] = "Users";
}
<main class="col-12 d-flex flex-column col-lg-11 offset-lg-1 offset-0 ">
	<nav class="navbar navbar-default navbar p-4 navbar__top">
		<div class="d-none d-lg-block">
			<h4 class="fw-semibold fs-2">Profile</h4>
		</div>
		<div class="d-block d-lg-none" id="hamburger__icon">
			<img src="./assets/svg/hamburger.svg" alt="" srcset="">
		</div>

		<a href="profile.html">
			<img src="./assets/svg/user profile.svg" alt="" srcset="">
		</a>
	</nav>
	<div class="col-10 mx-auto">
		<div class="px-4 fs-5">
			<div class="pt-5">
				<div class="d-flex align-items-start mb-4">
					<h4>Profile Picture</h4>
					<div class="profile-pic">
						<label class="-label" for="file">
							<span class="glyphicon glyphicon-camera"></span>
							<span>Change Image</span>
						</label>
						<input id="file" type="file" onchange="loadFile(event)" />
						<img src="https://cdn.pixabay.com/photo/2017/08/06/21/01/louvre-2596278_960_720.jpg" id="output" width="200" />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<label for="last_name">First name</label>
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="">
				</div>
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<label for="last_name">Last name</label>
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="">
				</div>
			</div>
			<div class="row mt-4">
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<label for="last_name">Email</label>
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="">
				</div>
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<label for="last_name">Phone number</label>
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="">
				</div>
			</div>

			<div class="d-flex flex-column col-12 mt-4 fs-4">
				<label for="last_name">Address</label>
				<input type="text" id="last_name" value="" name="last_name" class="text__input"
					   placeholder="Street Address">
				<input type="text" id="last_name" value="" name="last_name" class="text__input"
					   placeholder="Street Address Line 2">
			</div>
			<div class="row mt-2">
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="City">
				</div>
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="Region">
				</div>
			</div>
			<div class="row mt-2">
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="Postal/Zip Code">
				</div>
				<div class="d-flex flex-column col-lg-6 col-12 mt_75_sm fs-4">
					<input type="text" id="last_name" value="" name="last_name" class="text__input"
						   placeholder="Country">
				</div>
			</div>
			<div class="mt-5 text-end">
				<button type="submit" class="btn_outline fs-5 fw-600"
						style="margin-right: 1rem;">
					Cancel
				</button>
				<button type="submit"
						class="btn_solid fs-5 fw-600 bg_primary_hover text-white">
					Update
				</button>
			</div>
		</div>
	</div>
</main>

@section Scripts{

	<script>
		var loadFile = function (event) {
			var image = document.getElementById("output");
			image.src = URL.createObjectURL(event.target.files[0]);
		};

	</script>
}