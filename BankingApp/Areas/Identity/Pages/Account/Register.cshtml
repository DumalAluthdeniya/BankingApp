					</svg>
				</div>
				<p class="text-center mt-4 text_gray_dark fw-500">Register here to access your account</p>

				<form id="account" method="post" class="col-12 login__form mt-5">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="position-relative">
						<img src="./assets/svg/user.svg" class="position-absolute input__icon" alt="" srcset="">
						<input asp-for="Input.Email" class="col-12 mb-3 px-5 py-3" placeholder="Enter your username">
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="position-relative">
						<img src="./assets/svg/key.svg" alt="" srcset="" class="position-absolute input__icon">
						<input asp-for="Input.Password" class="col-12 mb-3 px-5 py-3" placeholder="Enter your password">
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<div class="position-relative">
						<img src="./assets/svg/key.svg" alt="" srcset="" class="position-absolute input__icon">
						<input asp-for="Input.ConfirmPassword" class="col-12 mb-3 px-5 py-3" placeholder="Enter your password">
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

					</div>
					<input type="submit" class="col-12 mt-4 py-3 bg_primary_hover text-white" value="Register">
				</form>
			</div>
		</div>
	</div>



	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
			crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script src="~/assets/js/script.js"></script>
</body>

</html>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
