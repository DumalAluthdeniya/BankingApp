@model ManageLoansViewModel
<div class="row">
	<div class="col-lg-4">
		<div class="my-3 d-flex justify-content-between" style="padding:0 2rem;">
			<div class="d-flex flex-column">
				<div>
					<label for="">Name</label>
					<p class="fs-6 fw-500 mt-1">@Model.Loan.Customer.FirstName @Model.Loan.Customer.LastName</p>
				</div>
				<div>
					<label for="">Amount</label>
					<p class="fs-6 fw-500 mt-1">@Model.Loan.BankOfferAmount.ToString("C",CultureInfo.CurrentCulture)</p>
				</div>
				<div>
					<label for="">Date</label>
					<p class="fs-6 fw-500">@Model.Loan.CreatedDate.ToString("g",CultureInfo.CurrentCulture)</p>
				</div>
				<div>
					<label for="">Created Officer</label>
					<p class="fs-6 fw-500">@Model.Loan.Employee.FirstName @Model.Loan.Employee.LastName</p>
				</div>
			</div>
			<div class="d-flex flex-column">
				<div>
					<label for="">Purpose of loan</label>
					<p class="fs-6 fw-500 mt-1">@Model.Loan.Purpose</p>
				</div>
				<div>
					<label for="">Loan Term (month)</label>
					<p class="fs-6 fw-500 mt-1">@Model.Loan.Term</p>
				</div>
				<div>
					<label for="">Collateral</label>
					<p class="fs-6 fw-500 mt-1">Land</p>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-7 offset-1">
		<table class="table">
			<thead class="thead-dark">
				<tr class="bg_primary text-white fs-6">
					<th scope="col" style="padding:1rem;">Capital</th>
					<th scope="col" style="padding:1rem;">Int Rate %</th>
					<th scope="col" style="padding:1rem;">Payment</th>
					<th scope="col" style="padding:1rem;">Balance</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var li in Model.Loan.LoanItems)
				{
					<tr class="secondery__font border-1">
						<th style="padding:1rem;">@li.Capital.ToString("C",CultureInfo.CurrentCulture)</th>
						<td style="padding:1rem;">@li.Interest%</td>
						<td style="padding:1rem;">@li.Amount.ToString("C",CultureInfo.CurrentCulture)</td>
						<td style="padding:1rem;">@li.Balance.ToString("C",CultureInfo.CurrentCulture)</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
